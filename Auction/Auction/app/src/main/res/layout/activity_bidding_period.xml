<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back4"
    android:layoutDirection="ltr"
    tools:context=".seller.BiddingPeriodActivity">

    <ImageView
        android:id="@+id/imgLogo"
        android:src="@drawable/logo4"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:layout_alignParentLeft="true"/>
    <ImageView
        android:id="@+id/imgArrow"
        android:src="@drawable/arrow2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:layout_alignParentRight="true"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="20dp"
        android:padding="10dp"
        android:alpha="10"
        android:background="@drawable/background">

        <TextView android:id="@+id/txtLoginTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bidding Period - Seller"
            android:textColor="#086791"
            android:textStyle="bold"
            android:textSize= "30sp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/sinethar" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:orientation="horizontal"
            android:background="#4AE91E63"/>
        <TextView
            android:id="@+id/txtStartDate"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            android:text="Choose Bidding Start Date"
            android:gravity="center"
            android:textColor="#026C62"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"
            android:textSize= "15sp"
            android:background="@drawable/round_text"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            />
        <TextView
            android:id="@+id/txtEndDate"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"
            android:text="Choose Bidding End Date"
            android:gravity="center"
            android:textColor="#026C62"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"
            android:textSize= "15sp"
            android:background="@drawable/round_text"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/butSave"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/round_button"
            android:padding="8dp"
            android:text="Save"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textAlignment="center"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:fontFamily="@font/summer_calling"/>
    </LinearLayout>

</RelativeLayout>