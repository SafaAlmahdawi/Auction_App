<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back4"
    android:layoutDirection="ltr"
    tools:context=".expert.ViewProductExpertActivity">

    <ImageView
        android:id="@+id/imgLogo"
        android:src="@drawable/logo4"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:layout_alignParentLeft="true"/>
    <ImageView
        android:id="@+id/imgArrow"
        android:src="@drawable/arrow2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:layout_alignParentRight="true"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="20dp"
            android:padding="10dp"
            android:alpha="10"
            android:layout_marginTop="70dp"
            android:scrollbars="vertical"
            android:background="@drawable/background">

            <TextView android:id="@+id/txtLoginTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Details - Expert"
                android:textColor="#086791"
                android:textStyle="bold"
                android:textSize= "30sp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/sinethar" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:orientation="horizontal"
                android:background="#4AE91E63"/>
            <ImageView
                android:layout_width="250dp"
                android:layout_height="200dp"
                android:id="@+id/imgView"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/product_operations"
                android:layout_marginTop="5dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:id="@+id/img1"
                    android:src="@drawable/prodimage"
                    android:layout_marginHorizontal="2dp"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:id="@+id/img2"
                    android:src="@drawable/prodimage"
                    android:layout_marginHorizontal="2dp"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:id="@+id/img3"
                    android:src="@drawable/prodimage"
                    android:layout_marginHorizontal="2dp"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:id="@+id/img4"
                    android:src="@drawable/prodimage"
                    android:layout_marginHorizontal="2dp"/>

            </LinearLayout>


            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/round_text"
                android:text="Product Title"
                android:gravity="center"
                android:textColor="#086791"
                android:textSize="16sp"
                android:drawableLeft="@drawable/title"
                android:padding="8dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txtPrice"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/round_text"
                    android:text="Product Price"
                    android:gravity="center"
                    android:textColor="#086791"
                    android:textSize="16sp"
                    android:drawableLeft="@drawable/price"
                    android:padding="8dp"/>
                <TextView
                    android:id="@+id/txtModel"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/round_text"
                    android:text="Product Model"
                    android:textColor="#086791"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:drawableLeft="@drawable/model"
                    android:padding="8dp"/>
            </LinearLayout>




                <TextView
                    android:id="@+id/txtStatus"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/round_text"
                    android:textColor="#086791"
                    android:textSize="16sp"
                    android:padding="8dp"
                    android:layout_gravity="center"
                    android:text="Product Status"
                    android:drawableLeft="@drawable/state"
                    android:gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txtMin"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:textColor="#086791"
                    android:textSize="14sp"
                    android:padding="8dp"
                    android:layout_gravity="center"
                    android:text="Min Price"
                    android:textStyle="bold"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/txtMax"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:textColor="#086791"
                    android:textSize="14sp"
                    android:padding="8dp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:text="Max Price"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/txtMinPrice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_text"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="5dp"
                    android:textColor="#086791"
                    android:textSize="14sp"
                    android:padding="8dp"
                    android:layout_gravity="center"
                    android:hint="0"
                    android:inputType="number"
                    android:textStyle="bold"
                    android:gravity="center"/>
                <EditText
                    android:id="@+id/txtMaxPrice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_text"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="5dp"
                    android:textColor="#086791"
                    android:textSize="14sp"
                    android:padding="8dp"
                    android:inputType="number"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:hint="0"
                    android:gravity="center"/>
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_submit"
                android:layout_width="285dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/round_button"
                android:padding="8dp"
                android:text="Submit"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>