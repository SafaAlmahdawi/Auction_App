<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back4"
    android:layoutDirection="ltr"
    tools:context=".CreateAccountActivity">

    <ImageView
        android:id="@+id/imgLogo"
        android:src="@drawable/logo4"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:layout_alignParentLeft="true"/>
    <ImageView
        android:id="@+id/imgArrow"
        android:src="@drawable/arrow2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:layout_alignParentRight="true"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="20dp"
        android:padding="10dp"
        android:alpha="10"
        android:layout_marginTop="10dp"
        android:scrollbars="vertical"
        android:background="@drawable/background">

        <TextView android:id="@+id/txtLoginTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Signup"
            android:textColor="#086791"
            android:textStyle="bold"
            android:textSize= "15sp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/summer_calling" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:orientation="horizontal"
            android:background="#4AE91E63"/>

        <EditText
            android:id="@+id/txtName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="text"
            android:layout_marginTop="10dp"
            android:background="@drawable/round_text"
            android:hint="Full Name"
            android:textColor="#03A9F4"
            android:textSize="15sp"
            android:drawableLeft="@drawable/editp"
            android:padding="8dp"/>
        <TextView android:id="@+id/txtType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose Type"
            android:textColor="#086791"
            android:textStyle="bold"
            android:textSize= "15sp"
            android:layout_marginTop="10dp" />
        <Spinner
            android:id="@+id/txtSpin"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/round_text"
            android:text="Choose your Type"
            android:textColor="#03A9F4"
            android:padding="8dp"/>
        <EditText
            android:id="@+id/txtEmail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="text"
            android:layout_marginTop="10dp"
            android:background="@drawable/round_text"
            android:hint="Type your Email"
            android:textColor="#03A9F4"
            android:textSize="15sp"
            android:drawableLeft="@drawable/email"
            android:padding="8dp"/>
        <EditText
            android:id="@+id/txtUser"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="text"
            android:layout_marginTop="10dp"
            android:background="@drawable/round_text"
            android:hint="User Name"
            android:textColor="#03A9F4"
            android:textSize="15sp"
            android:drawableLeft="@drawable/usern"
            android:padding="8dp"/>
        <EditText
            android:id="@+id/txtPass"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:layout_marginTop="10dp"
            android:background="@drawable/round_text"
            android:hint="Password"
            android:textColor="#03A9F4"
            android:textSize="15sp"
            android:drawableLeft="@drawable/pass"
            android:padding="8dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/butSignup"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/round_button"
            android:padding="8dp"
            android:text="Signup"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textAlignment="center"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/summer_calling"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:orientation="horizontal"
            android:background="#4AE91E63"/>

        <TextView android:id="@+id/txtAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Have an Account"
            android:textColor="#086791"
            android:textStyle="bold"
            android:textSize= "20sp"
            android:layout_marginTop="20dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/butLogin"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/round_button"
            android:padding="8dp"
            android:text="Login"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textAlignment="center"
            android:fontFamily="@font/summer_calling"
            android:layout_marginBottom="20dp"/>

    </LinearLayout>

</RelativeLayout>