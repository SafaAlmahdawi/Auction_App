<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    android:orientation="vertical">
    <TextView
        android:id="@+id/prod_id"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:visibility="gone"  />
    <TextView
        android:id="@+id/seller_id"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:visibility="gone"  />
    <TextView
        android:id="@+id/prod_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textStyle="bold"
        android:textSize="16sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/prod_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#4AE91E63"
            android:textSize="14sp" />
        <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="#086791"
        android:text=" SR."
        android:textSize="14sp" />
        <TextView
            android:id="@+id/txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            android:textColor="#086791"
            android:text=" Status: "
            android:textSize="14sp" />
        <TextView
            android:id="@+id/prod_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#4AE91E63"
            android:textSize="14sp" />
    </LinearLayout>
    <TextView
        android:id="@+id/prod_cat"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:visibility="gone"  />
    <TextView
        android:id="@+id/prod_model"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:visibility="gone"  />
    <TextView
        android:id="@+id/prod_qty"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:visibility="gone"  />
    <TextView
        android:id="@+id/prod_img1"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:visibility="gone"  />
    <TextView
        android:id="@+id/prod_img2"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:visibility="gone"  />
    <TextView
        android:id="@+id/prod_img3"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:visibility="gone"  />
    <TextView
        android:id="@+id/prod_img4"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:visibility="gone"  />
   </LinearLayout>