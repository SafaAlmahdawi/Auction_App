<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back4"
    android:layoutDirection="ltr"
    tools:context=".seller.AddProductActivity">

    <ImageView
        android:id="@+id/imgLogo"
        android:src="@drawable/logo4"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:layout_alignParentLeft="true"/>
    <ImageView
        android:id="@+id/imgArrow"
        android:src="@drawable/arrow2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:layout_alignParentRight="true"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="20dp"
            android:padding="10dp"
            android:alpha="10"
            android:layout_marginTop="80dp"
            android:scrollbars="vertical"
            android:background="@drawable/background">


            <TextView android:id="@+id/txtLoginTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Product - Seller"
                android:textColor="#086791"
                android:textStyle="bold"
                android:textSize= "30sp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/sinethar" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:orientation="horizontal"
                android:background="#4AE91E63"/>

            <EditText
                android:id="@+id/txtTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:layout_marginTop="20dp"
                android:background="@drawable/round_text"
                android:hint=" Product Title"
                android:textColor="#03A9F4"
                android:textSize="15sp"
                android:drawableLeft="@drawable/title"
                android:padding="8dp"/>
            <EditText
                android:id="@+id/txtQuantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:layout_marginTop="10dp"
                android:background="@drawable/round_text"
                android:hint=" Product Quantity"
                android:textColor="#03A9F4"
                android:textSize="15sp"
                android:drawableLeft="@drawable/quantity"
                android:padding="8dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/category"/>
            <Spinner
                android:id="@+id/txtCategory"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/round_text"
                android:textColor="#03A9F4"
                android:textSize="15sp"
                android:padding="8dp"
                android:entries="@array/categories"/>
            </LinearLayout>
            <EditText
                android:id="@+id/txtPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:layout_marginTop="10dp"
                android:background="@drawable/round_text"
                android:hint=" Product Price"
                android:textColor="#03A9F4"
                android:textSize="15sp"
                android:drawableLeft="@drawable/price"
                android:padding="8dp"/>
            <EditText
                android:id="@+id/txtModel"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="text"
                android:layout_marginTop="10dp"
                android:background="@drawable/round_text"
                android:hint=" Product Model"
                android:textColor="#03A9F4"
                android:textSize="15sp"
                android:drawableLeft="@drawable/model"
                android:padding="8dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/status"/>
                <Spinner
                    android:id="@+id/txtStatus"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/round_text"
                    android:textColor="#03A9F4"
                    android:textSize="15sp"
                    android:padding="8dp"
                    android:entries="@array/state"/>
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/butSave"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/round_button"
                android:padding="8dp"
                android:text="Next"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:textAlignment="center"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                android:fontFamily="@font/summer_calling"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>