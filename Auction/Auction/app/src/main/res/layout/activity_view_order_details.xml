<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    android:background="@drawable/back4"
    tools:context=".captain.ViewOrderDetailsActivity">

    <ImageView
        android:id="@+id/imgLogo"
        android:src="@drawable/logo4"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:layout_alignParentLeft="true"/>
    <ImageView
        android:id="@+id/imgArrow"
        android:src="@drawable/arrow2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:layout_alignParentRight="true"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="20dp"
        android:padding="10dp"
        android:alpha="10"
        android:layout_marginTop="60dp"
        android:scrollbars="vertical"
        android:background="@drawable/background">

        <TextView android:id="@+id/txtLoginTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order Details - Captain"
            android:textColor="#086791"
            android:textStyle="bold"
            android:textSize= "30sp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/sinethar" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:orientation="horizontal"
            android:background="#4AE91E63"/>
        <TextView android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buyer Details"
            android:textColor="#086791"
            android:textStyle="bold"
            android:textSize= "15sp"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/txtBuyer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_text"
            android:hint="Product Name: \nProduct Price: \nProduct Quantity: \nTotalPrice"
            android:lines="3"
            android:singleLine="false"
            android:padding="8dp"
            android:textColor="#03A9F4"
            android:textSize="15sp" />

        <TextView android:id="@+id/txtType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seller Details"
            android:textColor="#086791"
            android:textStyle="bold"
            android:textSize= "15sp"
            android:layout_marginTop="10dp" />
        <TextView
            android:id="@+id/txtSeller"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_text"
            android:hint="Product Name: \nProduct Price: \nProduct Quantity: \nTotalPrice"
            android:lines="3"
            android:singleLine="false"
            android:padding="8dp"
            android:textColor="#03A9F4"
            android:textSize="15sp" />
        <TextView android:id="@+id/txtProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order Details"
            android:textColor="#086791"
            android:textStyle="bold"
            android:textSize= "15sp"
            android:layout_marginTop="10dp" />
        <TextView
            android:id="@+id/txtOrder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_text"
            android:hint="Product Name: \nProduct Price: \nProduct Quantity: \nTotalPrice"
            android:lines="4"
            android:singleLine="false"
            android:padding="8dp"
            android:textColor="#03A9F4"
            android:textSize="15sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/butSave"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/round_button"
            android:padding="8dp"
            android:text="Done"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textAlignment="center"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:fontFamily="@font/summer_calling"/>
    </LinearLayout>

</RelativeLayout>